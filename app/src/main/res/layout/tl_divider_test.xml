<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light">


    <TableRow>

        <TextView
            style="@style/tv_keyboard"
            android:text="1" />

        <TextView
            style="@style/tv_keyboard"
            android:text="2" />

        <TextView
            style="@style/tv_keyboard"
            android:layout_marginRight="0dp"
            android:text="3" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/tv_keyboard"
            android:text="4"/>
        <TextView
            style="@style/tv_keyboard"
            android:text="5"/>
        <TextView
            style="@style/tv_keyboard"
            android:layout_marginRight="0dp"
            android:text="6"/>

    </TableRow>

    <TableRow>

        <TextView
            style="@style/tv_keyboard"
            android:text="7"/>

        <TextView
            style="@style/tv_keyboard"
            android:text="8"/>
        <TextView
            style="@style/tv_keyboard"
            android:layout_marginRight="0dp"
            android:text="9"/>

    </TableRow>

    <TableRow>

        <TextView
            style="@style/tv_keyboard"
            android:layout_marginBottom="0dp"
            android:text=""/>

        <TextView
            style="@style/tv_keyboard"
            android:layout_marginBottom="0dp"
            android:text="0"/>
        <TextView
            android:background="@drawable/backdelete"
            style="@style/tv_keyboard"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:text=""/>

    </TableRow>



</TableLayout>